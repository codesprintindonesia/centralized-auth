 
# Server Configuration
ENABLE_HTTP=true
HTTP_PORT=3000

ENABLE_HTTPS=false
HTTPS_PORT=3443
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.cert
SSL_PASSPHRASE=

# Proxy Configuration
TRUST_PROXY=false
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=centralized_authentication
DB_USER=postgres
DB_PASSWORD=password
DB_SCHEMA=auth
SYNC_DB=false

# Application Settings
NODE_ENV=development
LOG_LEVEL=debug
API_BASE_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_should_be_very_long_and_random
JWT_EXPIRES_IN=1h

# Asymmetric Signature
KEY_STORAGE_PATH=./keys
KEY_ROTATION_INTERVAL_DAYS=90
KEY_PASSPHRASE=auth-system-secret-key